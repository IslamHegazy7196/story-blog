<style>
  /* Add this CSS to style your form and list */
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  a {
    color: blue;
    text-decoration: none;
  }

  a:hover , a:visited:hover{
    text-decoration: underline;
    background:transparent;
    color: blue
  }
  a:visited {
    color: blue
  }
  .table {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
    margin-bottom: 20px;
  }

  .table th, .table td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  .table th {
    background-color: #f2f2f2;
  }

  
</style>

<div class="container">
  <div id="notice"><%= notice %></div>

  <h1>Users</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= link_to 'Show', user, class: 'btn' %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path, class: 'btn' %>
</div>
